{
  "manifest_version": 2,
  "name": "ZON-Tools",
  "version": "1.1.0",
  "description": "Zeit Online Helpers",
  "icons": {
    "16": "icons/webextension-zeit-icon-128.png",
    "32": "icons/webextension-zeit-icon-128.png"
  },
  "page_action": {
    "browser_style": true,
    "default_area": "tabstrip",
    "show_matches": [
      "*://*.zeit.de/*"
    ],
    "default_icon": {
      "32": "icons/webextension-zeit-icon-128.png",
      "128": "icons/webextension-zeit-icon-128.png"
    },
    "default_title": "ZON-Tools",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.zeit.de/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zeit.de/*"
      ],
      "js": [
        "js/libs/jquery-3.3.1.slim.min.js",
        "js/content.js"
      ],
      "css": [
        "/css/content.css"
      ]
    }
  ]
}