{
  "manifest_version": 2,
  "name": "Zeit Online Toolbox",
  "version": "0.3.0",
  "description": " ",
  "author": "lynk",
  "icons": {
    "16": "icons/webextension-zeit-icon-128.png",
    "32": "icons/webextension-zeit-icon-128.png"
  },
  "page_action": {
    "default_icon": {
      "32": "icons/webextension-zeit-icon-128.png",
      "128": "icons/webextension-zeit-icon-128.png"
    },
    "default_title": "Zeit Online Toolbox",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.zeit.de/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zeit.de/*"
      ],
      "js": [
        "js/libs/jquery-3.3.1.min.js",
        "js/content.js"
      ],
      "css": [
        "/css/content.css"
      ]
    }
  ]
}