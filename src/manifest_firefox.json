{
  "manifest_version": 2,
  "name": "Zeit Online Toolbox",
  "version": "1.0.2",
  "description": "Zeit Online Ignorierliste f√ºr die User-Kommentare. Sperre und blocke User aus den Kommentaren. Moderierte Kommentare werden ausgeblendet. Automatische Ein-Seiten-Ansicht und mehr.",
  "author": "lynk",
  "applications": {
    "gecko": {
      "id": "{35fc3e18-e154-4a40-9198-a670db0bc0f8}",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "64": "icons/webextension-zeit-icon-128.png",
    "128": "icons/webextension-zeit-icon-128.png"
  },
  "page_action": {
    "browser_style": true,
    "show_matches": [
      "*://*.zeit.de/*"
    ],
    "default_icon": {
      "16": "icons/webextension-zeit-icon-16.png"
    },
    "default_title": "Zeit Online Toolbox",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.zeit.de/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zeit.de/*"
      ],
      "js": [
        "js/libs/jquery-3.3.1.min.js",
        "js/content.js"
      ],
      "css": [
        "/css/content.css"
      ]
    }
  ]
}